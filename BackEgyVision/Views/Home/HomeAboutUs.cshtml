             });
        function Save(){
            var homeAboutUsAr = $("#HomeAboutUsAr").val();
            var homeAboutUEn = $("#HomeAboutUEn").val();
            var homeAboutUId = $("#HomeAboutUId").val();

           var AboutData = {
                "HomeAboutUsId": homeAboutUId,
                "HomeAboutUEn": homeAboutUEn,
                "HomeAboutUsAr": homeAboutUsAr
            };
            $.ajax({
                url: '/Home/UpdateHomeAboutUs',
                type: 'POST',
                data: AboutData,
                success: function (data) {
                    window.location.href = "/Home/AboutUs";
                },
                error: function (err) {
                    alert("Something Went Wrong!");
                }
            });
        }
    </script>
}
