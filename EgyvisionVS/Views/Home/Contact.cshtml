@model EgyVisionCore.Entities.EgyVision.VM.ContactUsVM;
@{
    ViewData["Title"] = "Contact";
}
<div class="primary Contact-us proojects">
    <div class="row">
        @await Component.InvokeAsync("LeftSide")
        <div class="col-lg-11 px-0">
            <div class="container">
                <div class="contact_content py-4 px-5 mb-4 text-white">
                    <div class="p-4">
                        <div class="contact-title my-4 pb-3 text-center wow bounceIn" data-wow-duration="1s" data-wow-delay="3.5s" data-wow-offset="100">
                            <h1 class="tany">CONTACT US</h1>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 mt-2 wow fadeInUp" data-wow-duration="1s" data-wow-delay="3.7s" data-wow-offset="100">
                                <div style="width: 100%">
                                    <iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=Egyvision%20Investment,%20Al%20Hekma,%20Egypt+(Egyvision%20Investment)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>

                                </div>
                            </div>
                            <div class="col-lg-6 mt-2  wow fadeInUp" data-wow-duration="1s" data-wow-delay="3.8s" data-wow-offset="100">
                                <div class="contactinfo">
                                    <div class="get-touch">
                                        <h4>Showroom:                            </h4>
                                        <p class="text-white">
                                            Al-Hekma Street ,
                                            District 7 ,Building 118 ,
                                            Ground floor, Sheikh Zayed, 6 October City, Giza Governorate, Egypt .
                                        </p>
                                    </div>
                                    <div class="where_are mt-4">
                                        <div class="row">
                                            <div class="col-lg-4 col-md-4 col-4">
                                                <h4>Office</h4>
                                                <p class="text-white">
                                                    @Model.MobileNumber
                                                </p>
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-4 row h-100">
                                                <div class="mx-auto">
                                                    <h4>Mobile</h4>
                                                    <p class="text-white">
                                                        @Model.PhoneNumber
                                                    </p>
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-md-4 col-4 pr-0">
                                                <div class="float-right">
                                                    <h4>E-Mail</h4>
                                                    <p class="text-white">
                                                        <sapn class="Egyvision"></sapn>@Model.Email
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <form class="pr-1">
                                    <div class="">
                                        <div class="form-group">
                                            <input type="text"
                                                   class="form-control bg-white border-color-grey rounded-0 text-center my-2 py-4"
                                                   placeholder="Name" />
                                        </div>

                                        <div class="form-group">
                                            <input type="email"
                                                   class="form-control bg-white border-color-grey rounded-0 text-center my-2 py-4"
                                                   placeholder="Your Mail" />
                                        </div>
                                        <div class="form-group">
                                            <input type="tel"
                                                   class="form-control bg-white border-color-grey rounded-0 text-center my-2 py-4"
                                                   placeholder="Phone Number" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control bg-white border-color-grey rounded-0 text-center my-2 py-4"
                                                  placeholder="Type Your Message"
                                                  rows="3"></textarea>
                                    </div>
                                    <div class="my-4">
                                        <button type="submit"
                                                class="button smoke start_shopping btn btn-sm border-white rounded-0 transparent Check_out ml-auto my-2 px-lg-4 px-md-4 text-white">
                                            SEND
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--footer-->
            @await Component.InvokeAsync("Footer")
        </div>
        @await Component.InvokeAsync("RightSide")
    </div>

</div>